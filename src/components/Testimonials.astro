---
<section class="py-12">
  <h1 class="yellowText text-5xl uppercase text-center">Testimonials</h1>
  <div class="grid grid-cols-1 md:grid-cols-3">
    {
      testimonials.map((profile)=>(
        <div class="m-4">
          <img src={'/images/'+profile.profileURL} alt="Testimonial" class="object-cover w-full h-48"/>
          <div class="yellowBG p-8">
            <p class="pb-4 font-bold">
              {profile.quote}
              </p>
              <small>{profile.author}{profile.age}</small>
            </div>
          </div>

      ))
    }
  </div>
</section>
