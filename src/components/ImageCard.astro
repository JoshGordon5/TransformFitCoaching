---
interface Props {
  text: string;
  header: string;
  imageURL: string;
}
const { text = "",header="", imageURL = "" } = Astro.props;
const imageStyle = {
  backgroundImage: `url(/images/${imageURL})`,
};
---

<div
  class="pb-48 pt-8 bg-cover m-8 bg-gray-700 bg-blend-multiply"
  style={imageStyle}
>
  <h2 class="text-white uppercase text-4xl italic">{header}</h2>
    <div class="text-white uppercase text-xl italic">
      <h2 >{text}</h2>
    </div>
  </div>