---
import ImageCard from "./ImageCard.astro";
const offers = [
    {
        imageURL:"dumbbells.jpg",
        offerHeader:"Package 1",
        offerText:"this is the first package"
    },
    {
        imageURL:"rowing.jpg",
        offerHeader:"Package 2",
        offerText:"this is the second package"
    },
    {
        imageURL:"skipping.jpg",
        offerHeader:"Package 3",
        offerText:"this is the third package"
    }
]
---


<section class="py-12 text-center">
<h1 class="yellowText text-5xl italic uppercase">What we offer</h1>
<p class="text-white uppercase italic bold">Find the package that suits you best</p>
<div class="grid grid-cols-1 md:grid-cols-3">
{
    offers.map((offer)=>(
        <ImageCard imageURL={offer.imageURL} header={offer.offerHeader} text={offer.offerText}/>
    ))
}

</div>
</section>


