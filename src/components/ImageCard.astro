---
interface Props {
  text: string;
  header: string;
  imageURL: string;
}
const { text = "",header="", imageURL = "" } = Astro.props;
const imageStyle = {
  backgroundImage: `url(/images/${imageURL})`,
};
---

<div
  class="pb-48 pt-8 bg-cover m-8 bg-gray-700 bg-blend-multiply"
  style={imageStyle}
>
  <h2 class="text-white uppercase text-4xl italic">{text}</h2>
  <p class="text-white text-xl"></p>
</div>